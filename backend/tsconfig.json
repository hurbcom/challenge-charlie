{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "~/*": [
        "*"
      ]
    },
  },
  "exclude": [
    "./**/*.test.ts",
    "./**/test/",
  ]
}

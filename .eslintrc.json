{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "react-app",
  "plugins": [
    "prettier",
    "import-helpers"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "endOfLine":"auto"
    }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^react/",
          "module",
          "/^~/",
          [ "parent", "sibling", "index" ]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
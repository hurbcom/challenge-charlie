# build environment
FROM node:16-alpine as build
WORKDIR /challenge-charlie
ENV PATH /challenge-charlie/node_modules/.bin:$PATH
COPY package.json /challenge-charlie/package.json
RUN npm install
RUN npm install react-scripts@3.3.1 -g --silent
COPY . /challenge-charlie
RUN npm run build
# production environment
FROM nginx:1.21.1-alpine
COPY --from=build /challenge-charlie/build /usr/share/nginx/html
EXPOSE 80
CMD [“nginx”, “-g”, “daemon off;”]
{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@challenge-charlie/frontend/shared/environments": [
        "src/libs/frontend/shared/environments/src/index.ts"
      ],
      "@challenge-charlie/frontend/weather-forecast/framework/repositories/adapters": [
        "src/libs/frontend/weather-forecast/framework/repositories/adapters/src/index.ts"
      ],
      "@challenge-charlie/frontend/weather-forecast/framework/repositories/fetch-api": [
        "src/libs/frontend/weather-forecast/framework/repositories/fetch-api/src/index.ts"
      ],
      "@challenge-charlie/frontend/weather-forecast/framework/repositories/models": [
        "src/libs/frontend/weather-forecast/framework/repositories/models/src/index.ts"
      ],
      "@challenge-charlie/frontend/weather-forecast/framework/ui": [
        "src/libs/frontend/weather-forecast/framework/ui/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
